<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_gravity="center"
        tools:context=".WishList">
    <ImageButton
        android:background="@drawable/wish_ist"
        android:id="@+id/notesIconID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        />

        <LinearLayout
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:hint="Your UserName"
                android:id="@+id/usnameedit"

                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <EditText
                android:hint="BOOK NAME"
                android:id="@+id/booknameedit"

                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <EditText
                android:hint="Author Name"
                android:id="@+id/authornameedit"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <Button
                android:id="@+id/saveContributionID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/horizontalScroller"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/buttoncontri"

                android:text="SAVE"
                app:backgroundTint=" #741a10 " />

            <Button

                android:id="@+id/loadcontri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/horizontalScroller"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/buttoncontri"
                android:text="LOADðŸ˜ƒ"
                app:backgroundTint=" #da370b " />




        </LinearLayout>

    </LinearLayout>