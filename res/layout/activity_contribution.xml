        android:id="@+id/typeedit"
       android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <EditText
        android:hint="Rate"
        android:id="@+id/rateedit"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
            <EditText
                android:textColor="@android:color/holo_orange_light"
